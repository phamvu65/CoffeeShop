            </graphic>
        </Button>

        <Button fx:id="btnPromotion" onAction="#handlePromotion" maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="menu-btn" text="Khuyến mãi">
            <graphic>
                <SVGPath content="M21.41 11.58l-9-9C12.05 2.22 11.55 2 11 2H4c-1.1 0-2 .9-2 2v7c0 .55.22 1.05.59 1.42l9 9c.36.36.86.58 1.41.58.55 0 1.05-.22 1.41-.59l7-7c.37-.36.59-.86.59-1.41 0-.55-.23-1.06-.59-1.42zM5.5 7C4.67 7 4 6.33 4 5.5S4.67 4 5.5 4 7 4.67 7 5.5 6.33 7 5.5 7z" style="-fx-fill: #94A3B8;" scaleX="0.9" scaleY="0.9" />
            </graphic>
        </Button>

        <Button fx:id="btnReports" onAction="#handleReports" maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="menu-btn" text="Báo cáo">
            <graphic>
                <SVGPath content="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zM9 17H7v-7h2v7zm4 0h-2V7h2v10zm4 0h-2v-4h2v4z" style="-fx-fill: #94A3B8;" />
            </graphic>
        </Button>

        <Pane VBox.vgrow="ALWAYS" />

        <VBox spacing="5.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" />
            </padding>
            <children>
                <Separator />
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Pane style="-fx-background-color: #E2E8F0; -fx-background-radius: 50; -fx-min-width: 30; -fx-min-height: 30;">
                            <children>
                                <Label layoutX="10.0" layoutY="6.0" style="-fx-font-weight: bold; -fx-text-fill: #64748B;" text="A" />
                            </children>
                        </Pane>
                        <VBox>
                            <Label fx:id="lblUser" style="-fx-font-weight: bold; -fx-font-size: 13px;" text="Admin" />
                            <Label onMouseClicked="#handleLogout" style="-fx-text-fill: #EF4444; -fx-font-size: 11px; -fx-cursor: hand;" text="Đăng xuất" />
                        </VBox>
                    </children>
