            </padding>
            <children>
                <Pane style="-fx-background-color: #4A90E2; -fx-background-radius: 10; -fx-min-width: 35; -fx-min-height: 35;">
                    <children>
                        <SVGPath content="M18.5,4h-13C4.1,4,3,5.1,3,6.5v9C3,16.9,4.1,18,5.5,18h13c1.4,0,2.5-1.1,2.5-2.5v-9C21,5.1,19.9,4,18.5,4z" fill="WHITE" layoutX="5" layoutY="5" scaleX="0.8" scaleY="0.8"/>
                    </children>
                </Pane>
                <Label styleClass="logo-text" text="BaristaFlow" />
            </children>
        </HBox>

        <Button fx:id="btnDashboard" onAction="#handleDashboard" maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="menu-btn" text="Tổng quan">
            <graphic>
                <SVGPath content="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z" style="-fx-fill: #94A3B8;" />
            </graphic>
        </Button>

        <Button fx:id="btnPOS" onAction="#handlePOS" maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="menu-btn" text="Bán hàng (POS)">
            <graphic>
                <SVGPath content="M20 4H4v2h16V4zm1 10v-2l-1-5H4l-1 5v2h1v6h10v-6h4v6h2v-6h1zm-9 4H6v-4h6v4z" style="-fx-fill: #94A3B8;" />
            </graphic>
        </Button>

        <Button fx:id="btnTable" onAction="#handleTable" maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="menu-btn" text="Quản lý bàn">
            <graphic>
                <SVGPath content="M4 6h16v12H4z" style="-fx-fill: #94A3B8;" scaleX="0.8" scaleY="0.8"/>
            </graphic>
        </Button>

        <Button fx:id="btnMenu" onAction="#handleMenu" maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="menu-btn" text="Thực đơn">
            <graphic>
                <SVGPath content="M8 6h8v2H8z" style="-fx-fill: #94A3B8;" />
            </graphic>
        </Button>

        <Button fx:id="btnCustomers" onAction="#handleCustomers" maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="menu-btn" text="Khách hàng">
