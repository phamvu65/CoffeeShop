<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.vuxnye.coffeeshop.controller.StaffController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="20.0">
        <children>
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1E293B;" text="Quản lý nhân viên" />

            <HBox HBox.hgrow="ALWAYS" /> <TextField fx:id="txtSearch" prefWidth="250.0" promptText="Tìm tên, SĐT hoặc username..." styleClass="search-box" />

            <Button onAction="#handleAddNew" style="-fx-background-color: #2563EB; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" text="+ Thêm nhân viên">
                <padding>
                    <Insets bottom="8.0" left="15.0" right="15.0" top="8.0" />
                </padding>
            </Button>
        </children>
    </HBox>

    <TableView fx:id="tableStaff" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colName" prefWidth="180.0" text="Họ và tên" />
            <TableColumn fx:id="colGender" prefWidth="80.0" style="-fx-alignment: CENTER;" text="Giới tính" />
            <TableColumn fx:id="colPhone" prefWidth="120.0" text="Số điện thoại" />
            <TableColumn fx:id="colUsername" prefWidth="120.0" text="Username" />
            <TableColumn fx:id="colRole" prefWidth="130.0" style="-fx-alignment: CENTER;" text="Vai trò" />
            <TableColumn fx:id="colHourlyRate" prefWidth="140.0" style="-fx-alignment: CENTER-RIGHT;" text="Lương/Giờ" />
            <TableColumn fx:id="colAction" prefWidth="120.0" style="-fx-alignment: CENTER;" text="Thao tác" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
</VBox>